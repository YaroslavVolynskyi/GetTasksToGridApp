<?xml version="1.0" encoding="utf-8"?>
<selector
xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true" >
	    <shape xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle" 
			android:padding="5dp">
		<gradient 
	        android:startColor="@color/griditem_color"
	        android:centerColor="@color/griditem_middle_color"
	        android:endColor="@color/griditem_color"
	        android:angle="90"/>
		<corners
			android:bottomRightRadius="2dp"
			android:bottomLeftRadius="2dp"
			android:topLeftRadius="2dp"
			android:topRightRadius="2dp"/>
		</shape>
	</item>

	<item android:state_pressed="false" >
	    <shape xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle" 
			android:padding="5dp">
		<gradient 
	        android:startColor="@color/griditem_color_pressed"
	        android:centerColor="@color/griditem_middle_color_pressed"
	        android:endColor="@color/griditem_color_pressed"
	        android:angle="90"/>
		<corners
			android:bottomRightRadius="2dp"
			android:bottomLeftRadius="2dp"
			android:topLeftRadius="2dp"
			android:topRightRadius="2dp"/>
		</shape>
	</item>
</selector>
